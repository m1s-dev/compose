services:
  app:
    image: jvmilazz0/kavita:0.8.3
    container_name: kavita-s1
    volumes:
      - /home/compose-user/kavita-s1-data/data:/kavita/config
      - /home/compose-user/kavita-s1-data/comics:/comics
      - /home/compose-user/kavita-s1-data/books:/books
      - /home/compose-user/kavita-s1-data/illust/:/illust
    environment:
      - TZ=Asia/Tokyo
    ports:
      - "5000:5000"
    restart: always
